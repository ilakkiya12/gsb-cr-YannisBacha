{% extends "layout.html.twig" %}
{% set praticienMenu = true %}

{% block title %}Praticiens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if praticiens %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Type</th>
                </tr>
            </thead>
            {% for praticien in praticiens %}
                <tr>
                    <td><a href="/praticien/{{ praticien.id }}">{{ praticien.nom }}</a></td>
                    <td>{{ praticien.prenom }}</td>
                    <td>{{ praticien.ville }}</td>
                    <td>{{ praticien.typePraticien.libelle }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun praticien trouvé.</div>
{% endif %}   
{% endblock %}