{% extends "layout.html.twig" %}
{% set rappotMenu = true %}

{% block title %}Vos rapports de visite{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if rapports %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:95px;">Date</th>
                    <th style="width:120px;">Praticien</th>
                    <th style="width:130px;">Ville</th>
                    <th>Motif</th>
                </tr>
            </thead>
            {% for rapport in rapports %}
                <tr>
                    <td>{{ rapport.dateRapport|date("m/d/Y") }}</td>
                    <td>{{ rapport.praticien.prenom }} {{ rapport.praticien.nom }}</td>
                    <td>{{ rapport.praticien.ville }}</td>
                    <td>{{ rapport.motif }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun rapport trouv√©.</div>
{% endif %}   
{% endblock %}